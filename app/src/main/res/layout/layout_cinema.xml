<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#87cefa"
        android:gravity="center"
        android:text="CINEMA DETAILS"
        android:textColor="#000"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/iv_Cinemaphoto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/tv_head"
        android:layout_margin="20dp" />


    <TextView
        android:id="@+id/tv_Cinemaname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_Cinemaphoto"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_Cinemaphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Cinemaname"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_CinemaAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Cinemaphone"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="25dp" />

    <ListView
        android:id="@+id/showslist"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </ListView>

</LinearLayout>
</ScrollView>